@{
    ViewData["Title"] = "Home Page";
}
<style>
    .propertydiv {
        border: 1px solid #cfcece;
        border-radius: 28px;
        padding: 10px;
        margin-top: 40px;
    }
</style>
<!--start wrapper-->
<div class="wrapper">
    <!--start top header
    <!--start content-->
    <main class="page-content">
        <div class="px-3">
            <div class="card-header bg-transparent border-0">
                <div class="row g-3 align-items-center">
                    <div class="col-12 col-md-4 col-lg-4">
                        @*  <h4 class="mb-0 font-600">Add New Client</h4> *@
                        @* <h4 class="mb-0 font-600">
                            @(Model.Id == Guid.Empty ? "Add New Client" : "Edit Client")
                        </h4> *@
                    </div>
                </div>
            </div>
            <div class="card-body profile">
                <div class="row g-3 align-items-center mt-1">
                    <div class="col-12 col-md-4 col-lg-4">

                        <div class="small-12 medium-2 large-2 columns position-relative">
                            <div class="circle">
                                @*   <img class="profile-pic" src="@Model.ClientProfileImageLink" alt="avatar-2" width="32" id="imageid"/> *@
@*                                 <img class="profile-pic" src="@(string.IsNullOrEmpty(Model.ClientProfileImageLink) ? Url.Content("~/images/profile2.png") : Model.ClientProfileImageLink)" alt="avatar-2" width="32" id="imageid" />
 *@                            </div>
                            <div class="p-image">
                                @*  <i class="fadeIn animated bx bx-upload upload-button"></i>  Upload Image *@
                                <span class=" upload-button"><i class="fadeIn animated bx bx-upload"></i>  Upload Image</span>
                                <input class="file-upload" type="file" accept="image/*" />
                            </div>
                        </div>
                    </div>

                    
                </div>

                <div class="row g-3 align-items-center mt-4 mb-2">
                    <div class="col-12 col-md-2 col-lg-2">
                        <label class="font-500 font-18 text-dark">Personal Details data</label>
                    </div>
                </div>
                <form asp-action="Signin" asp-controller="Account" method="post">
                   @*  <input asp-for="Id" hidden id="id" />
                    //<input asp-for="Status" hidden id="status" /> *@
                    <div class="row mb-3">
                        <div class="col-12 col-md-4 col-lg-4 mb-4">
                            <label class="form-label">Name<span class="text-danger">*</span></label>
                            <input  class="form-control" type="text" id="Name" />
                        </div>
                        <div class="col-12 col-md-4 col-lg-4 mb-4" hidden>
                            <label class="form-label">Name<span class="text-danger">*</span></label>
                            <input  class="form-control" type="text" id="Name" />
                        </div>

                        <div class="col-12 col-md-4 col-lg-4 mb-4">
                            <label class="form-label">Email Address<span class="text-danger">*</span></label>
                            <input  class="form-control" type="mail" id="Email" />
                        </div>

                        <div class="col-12 col-md-4 col-lg-4 mb-4">
                            <label class="form-label">Phone no.<span class="text-danger">*</span></label>
                            <input  class="form-control" type="number" id="phoneno" />

                        </div>


                        <div class="col-12 col-md-4 col-lg-4 mb-4">
                            <label class="form-label">Country<span class="text-danger">*</span></label>

                            <select  class="form-select form-control" aria-label="Default select example" id="country">
                                <option value="">Select Country</option>
                            </select>
                        </div>


                        <div class="col-12 col-md-4 col-lg-4 mb-4">

                            <label class="form-label">State<span class="text-danger">*</span></label>
                            <select  class="form-select form-control" aria-label="Default select example" id="state">
                                <option value="">Select State</option>
                            </select>

                        </div>

                        <div class="col-12 col-md-4 col-lg-4 mb-4">
                            <label class="form-label">City<span class="text-danger">*</span></label>

                            <select  class="form-select form-control" aria-label="Default select example" id="city">
                                <option value="">Select City</option>
                            </select>
                        </div>

                        <div class="col-12 col-md-4 col-lg-4 mb-4">
                            <label class="form-label">Postcode<span class="text-danger">*</span></label>
                            <input  class="form-control" type="number" placeholder="Post Code" id="postcode">
                        </div>
                        <div class="col-12 col-md-4 col-lg-4 mb-4">
                            <label class="form-label">Address<span class="text-danger">*</span></label>
                            <input  class="form-control" type="text" id="address" />
                        </div>
                    </div>
                    <div class="col-14 col-md-8 col-lg-11 text-right">
                        <button type="button" class="btn btn-outline-secondary font-14 me-2" style="background-color: red; color: white; border-color: red;" onclick="Cancel()">Cancel</button>

                        <button class="btn btn-success font-14 toggle" type="button" onclick="SaveClient()">Save Client</button>
                    </div>
                   
                </form>
                
            </div>
    </main>
    <!--end page main-->
    <!--start overlay-->
    <div class="overlay nav-toggle-icon"></div>
    <!--end overlay-->
    <!--Start Back To Top Button-->
    <a href="javaScript:;" class="back-to-top"><i class='bx bxs-up-arrow-alt'></i></a>
    <!--End Back To Top Button-->
    <!--start switcher-->
</div>
<!--end wrapper-->
<!-- Bootstrap bundle JS -->

<script src="~/js/bootstrap.bundle.min.js"></script>
